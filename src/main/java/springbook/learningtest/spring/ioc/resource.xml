<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<context:annotation-config />

	<context:component-scan base-package="springbook.learningtest.spring.ioc.annotation" />
	
	<bean id="hello" class="springbook.learningtest.spring.ioc.annotation.Hello" >
		<property name="name" value="Spring" />
	</bean>
	
	<bean id="hellow" class="springbook.learningtest.spring.ioc.bean.Hellow" />

	<bean id="printer" class="springbook.learningtest.spring.ioc.annotation.StringPrinter">
	</bean>

	<context:property-placeholder location="classpath:bean.properties" />

</beans>
